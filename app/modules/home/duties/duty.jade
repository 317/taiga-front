a(href="{{ ::vm.duty.get('url') }}", title="{{ ::duty.get('subject') }}")

    div.duty-type-image(ng-if="vm.getDutyType() == 'Issue'",
                        ng-style="{'background-image': 'url(' + vm.duty.get('assigned_to_extra_info').get('photo') + ')', 'background-color': vm.duty.get('status_extra_info').get('color')}")
        div.duty-type-svg
            include ../../../svg/issues.svg
    div.duty-type-image(ng-if="vm.getDutyType() == 'Task'",
                        ng-style="{'background-image': 'url(' + vm.duty.get('assigned_to_extra_info').get('photo') + ')', 'background-color': vm.duty.get('status_extra_info').get('color')}")
        div.duty-type-svg
            include ../../../svg/task.svg
    div.duty-type-image(ng-if="vm.getDutyType() == 'User story'",
                        ng-style="{'background-image': 'url(' + vm.duty.get('assigned_to_extra_info').get('photo') + ')', 'background-color': vm.duty.get('status_extra_info').get('color')}")
        div.duty-type-svg
            include ../../../svg/us.svg


    div.duty-data
        div
            span.duty-type {{ ::vm.getDutyType() }}
            span.duty-status(ng-style="{'color': vm.duty.get('status_extra_info').get('color')}") {{ ::vm.duty.get('status_extra_info').get('name') }}
        span.duty-title
            span.duty-id(tg-bo-ref="duty.get('ref')")
            span.duty-name {{ ::duty.get('subject') }}
    div.duty-project {{ ::vm.duty.get('projectName')}}
